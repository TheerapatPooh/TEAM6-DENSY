{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"],
      "@Controllers/*": ["src/Controllers/*"],
      "@prisma/*": ["prisma/*"],
      "@Routes/*": ["src/Routes/*"],
      "@tests/*": ["src/tests/*"],
      "@uploads/*": ["src/uploads/*"],
      "@Utils/*": ["src/Utils/*"]
    },
    "rootDir": "./src",
    "target": "ESNext",                     // ระบุเวอร์ชัน JavaScript 
    "module": "ESNext",                     // ใช้ ESModule
    "moduleResolution": "bundler",             // ใช้การ resolve module แบบ Node.js
    "outDir": "./dist",                     // โฟลเดอร์สำหรับไฟล์ที่ compile แล้ว
    "esModuleInterop": true,                // เปิดใช้ esModuleInterop เพื่อการ import module แบบ default
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "jest", "express"]
  },
  "include": ["src/**/*.ts"],               // ระบุโฟลเดอร์และไฟล์ที่ต้องการ compile
  "exclude": ["node_modules"]
}
